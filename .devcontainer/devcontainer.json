{
    "name": "colour.devcontainer",
    "dockerFile": "Dockerfile",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "forwardPorts": [
        8888
    ],
    "containerEnv": {
        "COLOUR_SCIENCE__ROOT_DIRECTORY": "/workspaces/colour-science.devcontainer",
        "COLOUR_SCIENCE__ACTIVE_PROJECTS": "colour"
    },
    "postCreateCommand": "ansible-playbook -vvv --connection=local --inventory 127.0.0.1, $COLOUR_SCIENCE__ROOT_DIRECTORY/colour-science-ansible/ansible/site.yml && source ~/.bashrc",
    "extensions": [
        "ms-python.python"
    ]
}